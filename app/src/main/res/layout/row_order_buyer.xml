<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvRoot"
    android:layout_marginBottom="2dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    app:cardBackgroundColor="@color/white">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txorder"
            android:text="Order: 121212"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txdate"
            android:text="dd/MM/yyyy"
            android:layout_toStartOf="@+id/btnnext"
            android:textColor="@color/gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EmailIv"
            android:text="Email"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/txorder"
            android:textColor="@color/gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txamount"
            android:text="Total : à¸¿ 10"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/EmailIv"
            android:textColor="@color/gray" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnnext"
            android:src="@drawable/ic_next_gray_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txstatus"
            android:text="In Progress"
            android:layout_marginTop="3dp"
            android:layout_toStartOf="@+id/btnnext"
            android:layout_below="@+id/EmailIv"
            android:textColor="@color/green" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>